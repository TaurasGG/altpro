{
  "info": {
    "name": "AltPro Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Project",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Demo Project\", \"description\": \"For exam\", \"members\": [\"user1\"]}"
        },
        "url": {
          "raw": "http://localhost:8080/api/projects",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "api",
            "projects"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 201\", function () { pm.response.to.have.status(201); });",
              "var json = pm.response.json(); pm.environment.set(\"projectId\", json.id || json._id);"
            ]
          }
        }
      ]
    }
  ]
}